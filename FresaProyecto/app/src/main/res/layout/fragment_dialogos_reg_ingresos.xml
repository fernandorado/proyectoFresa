<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dialogos.DialogoRegPersonas">

    <!-- TODO: Update blank fragment layout -->



    <ImageView
        android:id="@+id/imgIngresos"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ingresos"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Ingresos"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione una opciÃ³n:"
        android:layout_marginLeft="5sp"
        android:textSize="25sp"/>

    <Spinner
        android:id="@+id/spinnerIngresos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"/>

    <EditText
        android:id="@+id/campoMonto"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Digite el monto" />
    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:backgroundTint="@color/colorSplash"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        />
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="@color/colorSplash"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-75dp"
        />


</LinearLayout>