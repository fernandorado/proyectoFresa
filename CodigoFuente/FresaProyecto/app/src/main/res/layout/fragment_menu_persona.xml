<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InicioFragment">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icono" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatarImage"
            android:layout_alignParentBottom="true"
            android:text="Bienvenido "
            android:textColor="#121111"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatarImage"
            android:layout_alignParentBottom="true"
            android:text="Nombre "
            android:textColor="#121111"
            android:textSize="35sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="9dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registro de Gastos e Ingresos "
                        android:textAlignment="center"
                        android:textColor="#121111"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <GridLayout
                            android:id="@+id/idGrid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardRegIngresos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="45dp"
                                android:foreground="?selectableItemBackground"
                                app:cardCornerRadius="60dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="110dp"
                                        android:layout_height="100dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/ingresos" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginBottom="16dp"
                                        android:text="Ingresos"
                                        android:textAlignment="center"
                                        android:textColor="@color/funcionesCardView"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardRegGastos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:foreground="?selectableItemBackground"
                                app:cardCornerRadius="60dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="110dp"
                                        android:layout_height="100dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/gastos" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginBottom="16dp"
                                        android:text="Gastos"
                                        android:textAlignment="center"
                                        android:textColor="@color/funcionesCardView"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </GridLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>