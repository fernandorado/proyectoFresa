<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegistroCultivoFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/idLayoutFondo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSplash"
            android:elevation="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnIcoAtras"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorSplash"
                    android:src="@drawable/ic_flecha_atras" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:autoSizeTextType="uniform"
                    android:text="Registro"
                    android:textColor="@color/white" />

            </LinearLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:autoSizeMaxTextSize="50sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/stylo_fondo_borde"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:text="@string/TituloMenuCultivo"
                    android:textAlignment="center"
                    android:textColor="#121111" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:elevation="30dp"
                    app:cardCornerRadius="160dp">

                    <ImageView
                        android:id="@+id/imgCultivo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/icon_insumos" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textCal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:autoSizeMaxTextSize="60sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeTextType="uniform"
                    android:text="Nombre "
                    android:textAlignment="center"
                    android:textColor="#121111"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mis Gastos "
                            android:textAlignment="center"
                            android:textColor="#121111"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <GridLayout
                                android:id="@+id/idGrid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardRegJornal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="45dp"
                                    android:foreground="?selectableItemBackground"
                                    app:cardCornerRadius="60dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="15sp"
                                        android:layout_marginTop="15sp"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="110dp"
                                            android:layout_height="100dp"
                                            android:layout_gravity="center_horizontal"
                                            android:src="@drawable/jornal" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:text="Jornal"
                                            android:textAlignment="center"
                                            android:textColor="@color/funcionesCardView"
                                            android:textSize="22sp"
                                            android:textStyle="bold" />


                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardRegInsumos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:foreground="?selectableItemBackground"
                                    app:cardCornerRadius="60dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="15sp"
                                        android:layout_marginTop="15sp"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="110dp"
                                            android:layout_height="100dp"
                                            android:layout_gravity="center_horizontal"
                                            android:src="@drawable/fertilizante" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:text="Insumos"
                                            android:textAlignment="center"
                                            android:textColor="@color/funcionesCardView"
                                            android:textSize="24sp"
                                            android:textStyle="bold" />


                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>


                            </GridLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="14dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mis Ingresos "
                            android:textAlignment="center"
                            android:textColor="#121111"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <GridLayout
                                android:id="@+id/idGridIngresos"
                                android:layout_width="match_parent"
                                android:layout_height="152dp"
                                android:padding="4dp">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardRegCosecha"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:foreground="?selectableItemBackground"
                                    app:cardCornerRadius="60dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="15sp"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="110dp"
                                            android:layout_height="100dp"
                                            android:layout_gravity="center_horizontal"
                                            android:src="@drawable/cosecha" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:text="Cosecha"
                                            android:textAlignment="center"
                                            android:textColor="@color/funcionesCardView"
                                            android:textSize="22sp"
                                            android:textStyle="bold" />


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                            </GridLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
