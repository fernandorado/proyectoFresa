<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InicioFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icono" />

    <TextView
        android:id="@+id/textNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avatarImage"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp"
        android:text="EPSEA"
        android:textAlignment="center"
        android:textColor="#121111"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="165dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Bienvenido "
            android:textColor="#121111"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Nombre "
            android:textColor="#121111"
            android:textSize="35sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gastos "
                android:textAlignment="center"
                android:textColor="#121111"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/idGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:columnCount="2"
                    app:rowCount="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRegJornal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginRight="45dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/jornal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:text="Jornal"
                                android:textAlignment="center"
                                android:textColor="@color/funcionesCardView"
                                android:textSize="22sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRegInsumos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/fertilizante" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:text="Insumos"
                                android:textAlignment="center"
                                android:textColor="@color/funcionesCardView"
                                android:textSize="24sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </androidx.gridlayout.widget.GridLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresos "
                android:textAlignment="center"
                android:textColor="#121111"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/idGridIngresos"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:padding="4dp"
                    app:columnCount="1"
                    app:rowCount="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRegCosecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_gravity="center"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/cosecha" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:text="Cosecha"
                                android:textAlignment="center"
                                android:textColor="@color/funcionesCardView"
                                android:textSize="22sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </androidx.gridlayout.widget.GridLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ganancias "
                android:textAlignment="center"
                android:textColor="#121111"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/idGridGanancias"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:padding="4dp"
                    app:columnCount="1"
                    app:rowCount="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardGanancias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_gravity="center"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ganancias" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:text="Ganancias"
                                android:textAlignment="center"
                                android:textColor="@color/funcionesCardView"
                                android:textSize="22sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </androidx.gridlayout.widget.GridLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>
